# CollectFi API Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# Solana Configuration
SOLANA_RPC_ENDPOINT=https://api.mainnet-beta.solana.com
SOLANA_NETWORK=mainnet-beta
COLLECTFI_PROGRAM_ID=CollectFiProgram111111111111111111111111111
COLLECTFI_FEE_ACCOUNT=CollectFiFeeAccount111111111111111111111111
COLLECTFI_VAULT_ADDRESS=CollectFiVault111111111111111111111111111

# Insurance Provider
INSURANCE_PROVIDER=Lloyd's of London

# API Configuration
API_KEY_HEADER=X-API-Key
MAX_REQUESTS_PER_MINUTE=100
CORS_ORIGIN=*

# Security
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
SESSION_SECRET=your-session-secret-here

# Database (for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/collectfi
# REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info
LOG_FILE=logs/collectfi-api.log

# External Services
# SENTRY_DSN=your-sentry-dsn-here
# STRIPE_SECRET_KEY=your-stripe-secret-key-here
